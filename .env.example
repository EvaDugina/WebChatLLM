# Shared
APP_ENV=dev # dev / prod

# Backend
ACCESS_KEY=CHANGE_ME_8CHARS_MIN # ключ доступа для входа в чат
TOKEN_SECRET=CHANGE_ME_LONG_RANDOM # секретный ключ для токенов
TOKEN_TTL_SECONDS=86400 # время жизни токена в секундах

# LLM provider
LLM_PROVIDER=gemini # gemini / openrouter
SYSTEM_PROMPT=You are a helpful assistant for a themed chat about cooking. Answer concisely and safely. # системный промпт для чата

# Gemini
GEMINI_API_KEY=PASTE_YOUR_GEMINI_KEY # ключ API для Gemini
GEMINI_MODEL=gemini-2.0-flash # модель Gemini

# OpenRouter
OPENROUTER_API_KEY=PASTE_YOUR_OPENROUTER_KEY # API-ключ OpenRouter
OPENROUTER_MODEL=openai/gpt-4.1-mini # модель OpenRouter по умолчанию

# Storage
DB_PATH=/data/chat.db # путь к файлу базы данных
